<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AtlantisApplication.Models;assembly=AtlantisApplication"
             x:Class="AtlantisApplication.Views.AllMetricsDisplayView"
             Title="Choose your metrics"
             BackgroundColor="#33334c">
    <ContentPage.Content>
<ScrollView>
                <Grid Padding="32" RowSpacing="32" ColumnSpacing="32">
                    <Button HorizontalOptions="Center"
                            VerticalOptions="Center"  
                            WidthRequest="200"
                            HeightRequest="200"
                            Margin="10,10,10,10"
                            BackgroundColor="#FFF25022"
                            Text="Temperature" 
                            TextColor="Gray" 
                            Grid.Row="0" 
                            Grid.Column="0"
                            Clicked="GoOnTemperaturePage"/>

                    <Button HorizontalOptions="Center"
                            VerticalOptions="Center" 
                            Margin="10,10,10,10"

                            BackgroundColor="#FF7FBA00"
                            TextColor="Gray" 
                            Text="Humidity"
                            Grid.Row="0" 
                            Grid.Column="1"
                            Clicked="GoOnHumidityPage"/>

                <Button HorizontalOptions="Center"
                        VerticalOptions="Center"   
                        Margin="10,10,10,10"
                      
                        BackgroundColor="#FF01A4EF"
                        Text="CO2" 
                        TextColor="Gray"
                        Grid.Row="1" 
                        Grid.Column="0"
                        Clicked="GoOnCO2Page"/>

                <Button HorizontalOptions="Center"
                        VerticalOptions="Center"  
                        Margin="10,10,10,10"
                       
                        BackgroundColor="#FFFFB901"
                        TextColor="Gray" 
                        Text="Sound Level"
                        Grid.Row="1" 
                        Grid.Column="1"
                        Clicked="GoOnSoundLevelPage"/>
            </Grid>

</ScrollView>
    </ContentPage.Content>



