<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtlantisApplication.Views.Menu.ChooseSound">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="GO to the Sound list of the city"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Clicked="ListSound_OnButtonClicked" />
            <StackLayout Padding="5,10">
                <Label Text="2 date for the Sound"/>
                <Editor x:Name="Day1_Editor" Text="" BackgroundColor="Cyan" HeightRequest="100" Keyboard="Numeric"/>
                <Editor x:Name="Day2_Editor" Text="" BackgroundColor="CadetBlue" HeightRequest="100" Keyboard="Numeric"/>
                <Button Clicked="CustomListSound_OnButtonClickedAsync" x:Name="DoneButton" Text="Go !!!!!" TextColor="Red" BackgroundColor="DarkOrange" FontSize="Large" HorizontalOptions="Center" VerticalOptions="End"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>